<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<h3>Sign Up & Start Selling!</h3>
<form action="/signup" method="POST">
  <input type="text" name="username" name="username" placeholder="Username:"><br>
  <input type="text" name="email" name="email" placeholder="Email:"><br>
  <input type="password" name="password" name="email" placeholder="Password:"><br>
  <input class="btn btn-primary" type="submit" value="signup">
</form>
